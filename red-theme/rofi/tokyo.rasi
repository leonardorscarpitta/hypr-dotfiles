* {
  /* Backgrounds */
  bg0 : #120607;   /* fundo principal (vinho escuro) */
  bg1 : #1a0a0d;   /* input */
  bg2 : #2a0f13;   /* seleção */
  bg3 : #3a1a1e;   /* bordas */

  /* Foregrounds */
  fg0 : #f2eaea;   /* texto principal */
  fg1 : #b89292;   /* texto secundário */
  fg2 : #9a7a7a;   /* texto desabilitado */

  /* Accent */
  accent : #ff4d5a; /* destaque principal */
  urgent : #b11226; /* urgente / alerta */
}

